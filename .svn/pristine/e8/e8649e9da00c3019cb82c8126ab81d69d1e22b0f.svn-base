/* 商品分类 */
.article {
    font-size: 1.4rem;
    width: 100%;
}

/** 添加商品分类 */
.article .form {
    width: 100%;
}
.article .form .list {
    width: 100%;
    position: relative;
    top: 5.8rem;
    border-top: 0.1rem solid #eaeaea;
}
.article .form .list div {
    margin: 0.4rem 0rem 0rem 0rem;
    padding-bottom: 0.4rem;
    width: 100%;
    height: 3.6rem;
    line-height: 3.6rem;
    border-bottom: 0.1rem solid #eaeaea;
}
.article .form .list label {
    width: 12.6rem;
    text-indent: 1rem;
}
.article .form .list input {
    width: 20rem;
    height: 3.2rem;
    border: 0rem;
}
.article .form .list input:focus {
    outline:none !important;
}
.article .form .list select {
    padding: 0.4rem 0.6rem;
}
.article .form button {
    width: 100%;
    height: 4.3rem;
    text-align: center;
    line-height: 4.3rem;
    color: #ffffff;
    font-size: 1.6rem;
    position: fixed;
    bottom: 0rem;
    background-color: #0b923b;
}

/** 商品分类列表 */
.article .list {
    padding-bottom: 2rem;
    width: 100%;
    position: relative;
    top: 5.8rem;
    border-top: 0.1rem solid #eaeaea;
}
/** 列表 */
.article .list ul {
    margin: 0rem;padding: 0rem;
    width: 100%;
}
.article .list ul li {
    margin: 0rem;
    padding: 0rem;
    width: 100%;
    height: 3.6rem;
    font-size: 1.4rem;
    line-height: 3.6rem;
    border-bottom: 0.1rem solid #eaeaea;
}
.article .list ul li div {
    width: 88%;
    height: 3.6rem;
    float: left;
    text-indent: 1rem;
    overflow: hidden;
}
.article .list ul li span {
    width:12%;
    color: #c0c0c0;
    text-align: center;
}

/** 编辑商品分类 */
.article .edit {
    position: relative !important;
    top: 1rem !important;
}
/*** 修改与删除 */
.article .submit {
    width: 100%;
    height: 4.3rem;
    font-size: 1.6rem;
    position: fixed;
    bottom: 0rem;
}
.submit div {
    text-align: center;
    line-height: 4.3rem;
    color: #ffffff;
    float: left;
}
.submit div:nth-child(1) {
    width: 40%;
    background-color: #718077;
}
.submit div:nth-child(2) {
    width: 60%;
    background-color: #0b923b;
}