<script type="text/javascript">
	echo.init({
			offset : 100,
			throttle : 250,
			unload : false,
			callback : function(element, op) {
			}
		});
		Zepto(function() {
			$(".aui-tab-nav").on("tap", "li", function() {			
				 $('.aui-tab-nav li').removeClass('active');
				 $(this).addClass('active');
				 var $ul = $('.con-pl');                 
                 var $t = $(this).index();
                 $ul.css('display','none');
				 $ul.eq($t).css('display','block');					
			});
		});
    apiready = function(){
		api.parseTapmode();
    }
