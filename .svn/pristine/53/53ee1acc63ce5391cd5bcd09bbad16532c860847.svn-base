	}
	.aui-list-view-cell {
    position: relative;
    padding: 12px 2px;
    overflow: hidden;
    -webkit-transform-style: preserve-3d;
    transform-style: preserve-3d;
    -webkit-touch-callout: none;
}
.aui-label{display: inline-block}
