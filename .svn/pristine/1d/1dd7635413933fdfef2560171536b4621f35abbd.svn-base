//					H.$execScript('index', 'launch', 'closeFrame();');
//					H.$closeCurrentToWin("index");
//				}, 'user_info', {
//					name : '点点多',
//					id : 1
//				});
			});
		});
		
		apiready = function() {
			api.parseTapmode();
		};
	</script>
</html>