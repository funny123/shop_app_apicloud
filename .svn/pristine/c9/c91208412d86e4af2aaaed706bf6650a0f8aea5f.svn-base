			sql : "UPDATE T_CheckOut SET Status='1',Total='" + $api.byId('money').value + "',TotalCostPrice='" + $api.getStorage('checkout_total_cost') + "',TotalProfit='" + TotalProfit + "' where OrderNum= '" + $api.getStorage('ordernum') + "'"
		}, function(ret, err) {
			if (ret.status) {
			} else {
			}
		});
		//时间
		var d = new Date();
		var m = (d.getMonth() + 1);
		if (m < 10) {
			m = "0" + m;
		}
		var r = d.getDate();
		if (r < 10) {
			r = "0" + r;
		}
		var h = d.getHours();
		if (h < 10) {
			h = "0" + h;
		}
		var mi = d.getMinutes();
		if (mi < 10) {
			mi = "0" + mi;
		}
		var se = d.getSeconds();
		if (se < 10) {
			se = "0" + se;
		}
		var TimeNow = d.getFullYear() + "-" + m + "-" + r + " " + h + ":" + mi + ":" + se;
		var uidtimestamp=$api.getStorage('uid')+new Date().getTime();
		db.selectSql({
			name : 'ghuog_db' + $api.getStorage('mobile'),
			sql : "INSERT INTO T_CashList(orderNo,time,sum,gathering,change,note,cashType,status,ShiftOrderNo,uidtimestamp)VALUES('" + $api.getStorage('ordernum') + "','" + TimeNow + "','" + $api.byId('money').value + "','" + $api.byId('money').value + "','0','" + $api.byId('note').value + "',2,1,'" + $api.getStorage('ShiftOrderNo') + "','" + uidtimestamp + "')"
		}, function(ret, err) {
		});
	}
</script>