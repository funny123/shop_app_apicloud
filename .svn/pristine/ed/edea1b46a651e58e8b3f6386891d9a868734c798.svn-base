						<!--<div class="input-box">
						<input type="password" name="phone" value="" placeholder="请选择门店" id="branch_no"/>
						</div>-->
						<div class="aui-list-item-inner" id="branch">
							<div class="aui-list-item-label">
								选择门店
							</div>
							<div class="aui-list-item-input">
								<select v-model="selected" id="branch_no">
									<option v-for="option in options" v-bind:value="option.branch_no"> {{ option.branch_name }} </option>
								</select>
								<!--<span>Selected: {{ selected }}</span>-->
							</div>
						</div>
						<p class="iconfont icon-yey2 showpwd"></p>
					</div>
					<!--<div class="form-row">
					<span class="iconfont icon-mima">&nbsp;|</span>
					<div class="input-box">
					<input type="password" name="phone" value="" placeholder="请输入密码" id="branch_name"/>
					</div>
					<p class="iconfont icon-yey2 showpwd"></p>
					</div>-->
				</div>
			</div>
			<div class="form-btn">
				<!--<button class="aui-btn aui-btn-ff9800 aui-btn-block" id="login-btn" tapmode onclick="openWin('reg_info_head','reg_info_head.html');">
				立即注册
				</button>-->
				<button class="aui-btn aui-btn-ff9800 aui-btn-block" id="login-btn" tapmode onclick="reg();">
					立即注册
				</button>
			</div>
			<div class="form-o">
				<span>注册表示同意《供货港协议》</span>
			</div>
