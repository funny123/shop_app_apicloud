		function showPassword() {
			$api.attr($api.byId('password'), 'type', 'text');
			$api.removeCls($api.byId('showpass-btn'), 'aui-icon-attention');
			$api.addCls($api.byId('showpass-btn'), 'aui-icon-attentionfill');
			$api.attr($api.byId('showpass-btn'), 'onclick', 'hidePassword();');
			api.parseTapmode();
		}

		function hidePassword() {
			$api.attr($api.byId('password'), 'type', 'password');
			$api.removeCls($api.byId('showpass-btn'), 'aui-icon-attentionfill');
			$api.addCls($api.byId('showpass-btn'), 'aui-icon-attention');
			$api.attr($api.byId('showpass-btn'), 'onclick', 'showPassword();');
			api.parseTapmode();
		}

		function getVerify() {
			var sendVerify = $api.byId('sendVerify');
			var status = $api.attr(sendVerify, 'status');
			if (status != 1) {
				return;
			}
			$api.removeAttr(sendVerify, 'onclick');
			if ($api.byId('mobile').value.length != 11 || $api.byId('mobile').value == '') {
				api.toast({
					msg : '请输入正确的手机号',
					location : 'middle'
				});
				return;
			}
			api.ajax({
				url : 'http://www.ghuog.com/yii2_shop/api/web/app/v1?job=reg_getvercode&mobile=' + $api.byId('mobile').value + '',
				method : 'get',
				data : {
					values : {
						//						name : 'haha'
					},
					files : {
						//						file : 'fs://a.gif'
					}
				}
			}, function(ret, err) {
				if (ret) {
					if (ret.code == -1) {
						api.toast({
							msg : '手机号已注册',
							location : 'middle'
						});
					} else if (ret.code == 1) {
						api.toast({
							msg : '短信发送成功',
							location : 'middle'
						});
					}
				} else {
					api.alert({
						msg : JSON.stringify(err)
					});
				}
			});
			api.parseTapmode();
			$api.html(sendVerify, '<span id="GetVerify" style="color:#fff;">60</span>');
			times = 59;
			isinerval = setInterval("CountDown()", 1000);
			setTimeout(function() {
				$api.val($api.byId("code"), '');
			}, 500)
		}

		function CountDown() {
			if (times < 1) {
				var sendVerify = $api.byId('sendVerify');
				$api.attr(sendVerify, 'onclick', 'get_verify()');
				$api.attr(sendVerify, 'status', '1');
				api.parseTapmode();
				$api.html(sendVerify, '重新获取');
				clearInterval(isinerval);
				return;
			}
			var getVerify = $api.byId('GetVerify');
			$api.html(getVerify, '' + times + '');
			times--;
		}

		function reg() {
			//		alert($api.byId('branch_no').value);
			var loginpwd = hex_md5(hex_md5($api.byId('passwd').value + 'shikang2017@)!&'));
			api.ajax({
				url : 'http://www.ghuog.com/yii2_shop/api/web/app/v1?job=reg&username=' + $api.byId('mobile').value + '&loginname=' + $api.byId('mobile').value + '&loginpwd=' + loginpwd + '&vercode=' + $api.byId('code').value + '&branch_no=' + $api.byId('branch_no').value + '&branch_name=' + $api.byId('branch_no').value + '&way=IOS&openid=',
				method : 'get',
				data : {
					values : {
						//						name : 'haha'
					},
					files : {
						//						file : 'fs://a.gif'
					}
				}
			}, function(ret, err) {
				if (ret) {
					if (ret.code == -1) {
						api.toast({
							msg : '验证码错误',
							location : 'middle'
						});
					} else if (ret.code == -2) {
						api.toast({
							msg : '注册失败',
							location : 'middle'
						});
					} else {
						api.toast({
							msg : '注册成功，等待门店审核',
							duration : 3000,
							location : 'bottom'
						});
						goLogin('./login_head');
					}
				} else {
					api.alert({
						msg : JSON.stringify(err)
					});
				}
			});
		}
	</script>
