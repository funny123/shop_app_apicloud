/* o2o订单管理 */
.article {
    font-size: 1.4rem;
    width: 100%;
}
/** 头部 */
.article .top_fixed {
}
.article .top_fixed select {
    margin: 1.2rem 0rem 0rem -7rem;
    width: 14.2rem;
    height: 3.2rem;
    text-indent: 0.6rem;
    line-height: 3.2rem;
    text-align: center;
    position: relative;
    left: 50%;
    color: #ffffff;
    border-radius: 0.4rem;
    border: 0.1rem solid #0b973d;
    background-color: #0b973d;
}
.article .top_fixed select:focus {
    outline:none !important;
}

/** 订单列表 */
.article .list {
    padding-bottom: 2rem;
    width: 100%;
    position: relative;
    top: 5.6rem;
    border-top: 0.1rem solid #eaeaea;
}
.article .list ul {
    margin: 0rem;
    padding: 0rem;
    width: 100%;
    height: 4rem;
    line-height: 4rem;
    border-bottom: 0.1rem solid #eaeaea;
}
.article .list ul li {
    padding: 0rem;
    font-size: 1.2rem;
}
.article .list ul li label {
    float: left;
    text-indent: 1rem;
}
.article .list ul li span {
    height: 4rem;
    float: left;
}
.article .list ul li:nth-child(1) {
    width: 46.6%;
    float: left;
}
.article .list ul li:nth-child(1) span {
    width: 12.6rem;
    overflow: hidden;
}
.article .list ul li:nth-child(2) {
    width: 29%;
    float: left;
}
.article .list ul li:nth-child(2) span {
    width: 6.2rem;
    height: 3rem;
    overflow: hidden;
}
.article .list ul li:nth-child(3) {
    width: 24.4%;
    float: left;
}
.list ul li:nth-child(3) span {
    width: 4.5rem;
    height: 3rem;
    overflow: hidden;
}

/** 订货单详情 */
/*** 列表 */
.article .wrap .choose {
    margin: 1rem 0rem 0rem 0rem;
    padding-bottom: 0.4rem;
    width: 100%;
    height: 3.4rem;
    line-height: 3.4rem;
    border-top: 0.1rem solid #eaeaea;
    border-bottom: 0.1rem solid #eaeaea;
}
.article .wrap .choose label {
    width: 11rem;
    float: left;
    text-indent: 1rem;
}
.article .wrap .choose input {
    width: 20rem;
    height: 3.2rem;
    border: 0rem;
}
.article .wrap .choose input:focus {
    outline:none !important;
}
/*** 提交 */
.article .wrap button {
    width: 100%;
    height: 4.3rem;
    text-align: center;
    line-height: 4.3rem;
    color: #ffffff;
    font-size: 1.6rem;
    position: fixed;
    bottom: 0rem;
    background-color: #0b923b;
}
.article .wrap .dark {
    background-color: #718077;
}


/*** 付款方式 */
.article .wrap .payment {
    width: 100%;
    height: 9.4rem;
    position: fixed;
    bottom: 0rem;
    z-index: 100;
    border-top: 0.1rem solid #eaeaea;
    border-bottom: 0.1rem solid #eaeaea;
    background-color: #ffffff;
}
.article .wrap .payment label {
    margin: 0rem 0rem 0rem 0rem;
    padding-top: 0.8rem;
    width: 100%;
    height: 3.4rem;
    line-height: 3.4rem;
    color: #b1b1b1;
    font-size: 1.6rem;
    text-indent: 1rem;
}
.article .wrap .payment .sort {
    margin-top: 1.6rem;
    width: 100%;
    height: 6.6rem;
    float: left;
}
.article .wrap .payment .sort div {
    width: 16.55%;
    height: 6.6rem;
    float: left;
}
.article .wrap .payment .sort div img {
    margin-left: -2.1rem;
    width: 4rem;
    height: 4rem;
    position: relative;
    left: 50%;
    border: 0rem;
}
.article .wrap .payment .sort div span {
    width: 100%;
    text-align: center;
    font-size: 1.2rem;
}
.article .wrap .payment .sort div input {
    margin: 0.2rem 0rem 0rem -0.65rem;
    width: 1.3rem;
    height: 1.3rem;
    position: relative;
    left: 50%;
}
.article .wrap .payment .cancel {
    position: absolute;
    top: -3.3rem;
    right: 0.6rem;
    font-size: 3rem;
    color: #bcbcbc;
}
/*** 列表 */
/**** 间隔 */
.article .wrap .thread {
    margin: 0rem 0rem 0rem 0rem;
    padding-top: 0.8rem;
    width: 100%;
    height: 3.4rem;
    line-height: 3.4rem;
    color: #b1b1b1;
    font-size: 1.6rem;
    text-indent: 1rem;
    background-color: #f0f0f0;
}
.article .column {
    padding-bottom: 6rem;
    position: relative;
    top: 0rem;
}
.article .column ul li:nth-child(1) span {
    width: 11rem;
}