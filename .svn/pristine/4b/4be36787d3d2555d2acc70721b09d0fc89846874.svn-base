	<script type="text/javascript">
	var UIScrollPicture;
		echo.init({
			offset : 100,
			throttle : 250,
			unload : false,
			callback : function(element, op) {
			}
		});
		//		Zepto(function() {
		//			$(".aui-tab-nav").on("tap", "li", function() {
		//				$('.aui-tab-nav li').removeClass('active');
		//				$(this).addClass('active');
		//				var $ul = $('.con-pl');
		//				var $t = $(this).index();
		//				$ul.css('display', 'none');
		//				$ul.eq($t).css('display', 'block');
		//			});
		//		});
		apiready = function() {
			api.parseTapmode();
			UIScrollPicture = api.require('UIScrollPicture');
			//  alert(api.pageParam.no);
			api.ajax({
				url : 'http://www.ghuog.com/yii2_shop/api/web/app/v1?job=getcontent&item_no=' + api.pageParam.no + '',
				method : 'get',
				data : {
					values : {
						name : 'haha'
					},
					files : {
						file : 'fs://a.gif'
					}
				}
			}, function(ret, err) {
				if (ret) {
					var app = new Vue({
						el : '#demo',
						data : {
							goods_name : ret.data.name,
							price : ret.data.price,
							stock : ret.data.stock,
							unit : ret.data.unit,
							area : ret.data.area,
							//							images : ret.data.img[0]
						}
					})
					$api.byId("images").src = ret.data.img[0];
					$api.byId("content_img").src = ret.data.img[0];
					//					api.alert({
					//						msg : JSON.stringify(ret)
					//					});
					UIScrollPicture.open({
						rect : {
							x : 0,
							y : 0,
							w : api.winWidth,
							h : api.winHeight / 2
						},
						data : {
							paths : ret.data.img
//							captions : ['apicloud', 'apicloud', 'apicloud', 'apicloud']
						},
						styles : {
							caption : {
								height : 35,
								color : '#E0FFFF',
								size : 13,
								bgColor : '#696969',
								position : 'bottom'
							},
							indicator : {
								align : 'center',
								color : '#FFFFFF',
								activeColor : '#DA70D6'
							}
						},
						placeholderImg : 'widget://res/slide1.jpg',
						contentMode : 'scaleToFill',
						interval : 3,
						fixedOn : api.frameName,
						loop : true,
						fixed : false
					}, function(ret, err) {
						if (ret) {
//							alert(JSON.stringify(ret));
						} else {
//							alert(JSON.stringify(err));
						}
					});
				} else {
					api.alert({
						msg : JSON.stringify(err)
					});
				}
			});
		}
	</script>
</html>