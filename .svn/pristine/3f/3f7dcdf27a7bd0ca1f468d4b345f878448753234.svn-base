
/* 商品采购 */
.article {width: 100%;}

/** 搜索栏 */
.article .operate {
    margin: 0rem auto;
    width: 35.0rem;
    height: 6rem;
    position: relative;
    top: 5.8rem;
}
.article .operate input {
    margin: 0rem 0rem 0rem -16.6rem;
    width: 33.0rem;
    height: 4.6rem;
    position: relative;
    left: 50%;
    text-indent: 0.8rem;
    z-index: 1;
    border: 0.1rem solid #CCCCCC;
}
.article .operate span {
    width: 3rem;
    height: 2.8rem;
    position: absolute;
    right: 2rem;
    top: 1rem;
    z-index: 100;
    background-image: url("../image/product_add_scan.png");
    background-size: 3rem 2.8rem;
}
/** 提交 */
.article .submit {
    width: 100%;
    height: 4.3rem;
    text-align: center;
    line-height: 4.3rem;
    color: #ffffff;
    position: fixed;
    bottom: 0rem;
    background-color: #0b973d;
}

/* 编辑商品属性 */
.property {
    width: 100%;
}
/** 照片或拍照 */
.property .photo {
    margin: 0.6rem 0rem 0rem 0rem;
    padding-bottom: 0.7rem;
    width: 100%;
    height: 9rem;
    border-bottom: 0.1rem solid #eaeaea;
}
.property .photo .shrink {
    text-indent: 0.4rem;
}
.property .photo .shrink div {
    padding: 0rem;
    margin: 0rem;
    width: 30%;
    height: 9rem;
    float: left;
}
.property .photo .shrink div img{
    margin-left: -0.4rem;
    width: 100%;
    border: none;
}
.property .photo .shrink div span {
    margin: 2.4rem 0rem 0rem 0rem;
    width: 4.5rem;
    height: 4.2rem;
    background-size: 4.5rem 4.2rem;
}
.property .photo .shrink div:nth-child(1) div {
    margin-left: 0.7rem;
    padding: 0rem;
    width: 9rem;
    height: 9rem;
    background-image: url("../image/nopic.png");
    background-size: 9rem;
    overflow: hidden;
    border: 0.1rem solid #dddddd;
}
.property .photo .shrink div:nth-child(2) span {
    margin-left: 4rem;
    background-image: url("../image/product_add_picture.png");
}
.property .photo .shrink div:nth-child(3) span {
    background-image: url("../image/product_add_album.png");
}
/** 商品属性 */
.property .meigege {
    margin: 0.4rem 0rem 0rem 0rem;
    padding-bottom: 0.4rem;
    width: 100%;
    height: 3.6rem;
    line-height: 3.6rem;
    border-bottom: 0.1rem solid #eaeaea;
}
.property .meigege .indent {
    text-indent: 0.4rem;
}
.property .meigege label {
    width: 9.6rem;
}
.property .meigege input {
    width: 20rem;
    height: 3.2rem;
    border: 0rem;
}
.property .meigege input:focus {
    outline:none !important;
}
.property .meigege select {
    padding: 0.4rem 0.6rem;
}
/*** 尾部 */
.property .meigege_tail{
    margin-bottom: 6rem;
}
/** 确认 */
.property .submit {
    width: 100%;
    height: 4.3rem;
    position: fixed;
    bottom: 0rem;
}
.property .submit div {
    text-align: center;
    line-height: 4.3rem;
    color: #ffffff;
    float: left;
}
.property .submit div:nth-child(1) {
    background-color: #718077;
}
.property .submit div:nth-child(2) {
    background-color: #00a91c;
}

/* 商品列表 */
.article .list {
    padding-bottom: 2rem;
    width: 100%;
    position: relative;
    top: 5.8rem;
    border-top: 0.1rem solid #eaeaea;
}
/** 列表 */
.article .list ul {
    margin: 0rem;padding: 0rem;
    width: 100%;
    height: 4rem;
    line-height: 4rem;
    border-bottom: 0.1rem solid #eaeaea;
}
.article .list ul li {
    margin: 0rem;
    padding: 0rem;
    float: left;
}
.article .list ul li label {
    padding: 0rem 0.2rem 0rem 0rem;
    float: left;
    text-indent: 1.18rem;
}
.article .list ul li span {
    float: left;
}
.article .list ul li:nth-child(1) {
    width: 52%;
    font-size: 1.3rem;
}
.article .list ul li:nth-child(1) span {
    width: 14.2rem;
    height: 4rem;
    overflow: hidden;
}
.article .list ul li:nth-child(2) {
    margin-left: 1%;
    width: 40%;
    font-size: 1.2rem;
}
.article .list ul li:nth-child(2) span {
    width: 10rem;
    height: 4rem;
    overflow: hidden;
}
.article .list ul li:nth-child(3) {
    margin-left: 1%;
    width: 6%;
    color: #c0c0c0;
}